{
    "model": {
        "name": "pt_BR-from_scratch-accents",
        "langs": ["pt_BR"]
    },
    "training": {
        "num_epochs": 100,
        "batch_size": 32,
        "max_norm": 400,
        "augment": true,
        "finetune": false
    },
    "optimizer": {
        "name": "SGD",
        "params": {
            "lr": 3e-4,
            "momentum": 0.9,
            "nesterov": true
        }
    },
    "scheduler": {
        "name": "ExponentialLR",
        "params": {
            "gamma": 0.99
        }
    }
}