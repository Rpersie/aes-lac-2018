{
    "model": {
        "name": "example",
        "freeze_layers": "all",
        "lang": "pt_BR",
        "map_fc": "map_en-pt_BR.json",
        "params": {
            "rnn_hidden_size": 800
        }
    },
    "training": {
        "num_epochs": 100,
        "batch_size": 32,
        "max_norm": 400,
        "augment": true,
        "finetune": false,
        "task_weights": [1]
    },
    "optimizer": {
        "name": "SGD",
        "params": {
            "lr": 3e-4,
            "momentum": 0.9,
            "nesterov": true
        },
        "per_layer_lr": [
            ["base"],
            ["fc", 3e-3]
        ]
    },
    "scheduler": {
        "name": "ExponentialLR",
        "params": {
            "gamma": 0.99
        }
    }
}